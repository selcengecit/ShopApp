@model ShopApp.WEBUI.Models.RoleDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<h1 class="h3">EditRole</h1>
<body>
    <p>@ViewBag.Result</p>
</body>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="RoleEdit" >
            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
            <input type="hidden" name="RoleName" value="@Model.Role.Name" />
            <h6>Add To @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.Nonmember.Count() == 0)
                {
                    <tr>
                        <td>Bütün kullanıcılar role ait.</td>
                    </tr>

                }
                else
                {
                    @foreach (var user in Model.Nonmember)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" , name="IdsToAdd" value="@user.Id" />
                            </td>

                        </tr>

                    }
                }
            </table>
            <hr />

            <h6>Remove From @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.Member.Count() == 0)
                {
                    <tr>
                        <td>Bütün kullanıcılar role ait.</td>
                    </tr>

                }
                else
                {
                    @foreach (var user in Model.Member)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" , name="IdsToDelete" value="@user.Id" />
                            </td>

                        </tr>

                    }
                }

            </table>
            <div class="form-group row">
                <div class="col-sm-10 offset sm-2">
                    <button type="submit" class="btn btn-primary">SaveChanges</button>
                </div>
            </div>


        </form>
    </div>
</div>