
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model shopapp.entity.Product

<div class="card">
    <img class="card-img-top" src="https://productimages.hepsiburada.net/s/6/460/9713620058162.jpg" alt="" />
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.UnitPrice
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.ProductID" class="btn btn-primary">Detail1</a>
        <a asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.ProductID" class="btn btn-primary">AddToCart</a>
        <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@Model.ProductID" class="btn btn-primary">Edit</a>
        <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@Model.ProductID" class="btn btn-primary">Delete</a>

    </div>
</div>